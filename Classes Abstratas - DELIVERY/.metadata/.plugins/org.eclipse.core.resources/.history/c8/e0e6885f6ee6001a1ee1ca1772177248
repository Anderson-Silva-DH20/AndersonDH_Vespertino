package Delivery;

import java.util.Scanner;

public abstract class Sanduiche {

	Scanner leitor = new Scanner (System.in);
	
	String ingredientesSanduiche [] = {"Linguiça","Presunto","Queijo","Ovos","Tomate"
			,"Alface","Orégano","Pepino","Ketchup","Maionese"};
	String ingredientesSelecionados = "O seu Sanduíche terá os seguintes ingredientes \n";
	int opcaoSandu;
	
	public void menuSandu() {
		System.out.println("Você selecionou a opção Sanduíche. Por favor, selecione até 10 ingredientes"
				+ " Caso não deseje continuar escolhendo, digite 0 a qualquer momento");
		
	do {
		System.out.println("Escolha uma opção ou tecle 0 para sair");
		for (int i = 0; i < ingredientesSanduiche.length; i++) {  //mostra os ingredientes
		System.out.print("["+(i+1)+"] "+ingredientesSanduiche[i]+" ");
	    }
		
		opcaoSandu =leitor.nextInt() - 1;
	    while(opcaoSandu>9 || opcaoSandu<-1) {
			System.out.println("Opção Inválida! Por favor, escolha novamente");
			opcaoSandu =leitor.nextInt() - 1;
	    }
	    if(opcaoSandu!=-1) {
	    	ingredientesSelecionados += "["+(opcaoSandu+1)+"]-"+ingredientesSanduiche[opcaoSandu]+" ";
	    }
	    
	}while (opcaoSandu!=-1);
		
	System.out.println(ingredientesSelecionados);
	
	}

}
