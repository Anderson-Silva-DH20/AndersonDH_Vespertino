package Delivery;

import java.util.Scanner;

public class Massas {
	String molho;
	
	public void  menuMassas() {
		Scanner leitor = new Scanner (System.in);
		
		String tiposMassas [] = {"Macarrão", "Pizza","Lasanha"};
		
		System.out.println("Você selecionou a opção Massas. Selecione: \n"
				+ "[1] Macarrão [2] Pizza [3] Lasanha");
		int opcMassa = leitor.nextInt();
		
		while(opcMassa<1 && opcMassa>3) {
			System.out.println("Opcão inválida! [1] Macarrão [2] Pizza [3] Lasanha");
			opcMassa = leitor.nextInt();
		}
		System.out.println("Deseja adicionar molho a (ao) "+tiposMassas[opcMassa]+"?");
	}
	
}
